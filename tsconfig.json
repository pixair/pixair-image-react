{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.stories.ts",
        "**/*.spec.tsx",
        "**/*.test.tsx",
        "**/*.stories.tsx",
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "typeRoots" : ["node_modules/@types", "src/types"]
    }
}
